@model List<WwatermelonWebsite.Models.RequestModel>

@{
    ViewData["Title"] = "Viewing Open Requests";
}
<h1>@ViewData["Title"]</h1>

<p style="font-size: 1.2em; color: #555;">
    At the moment, we are focused on beauty brands, but we hope to expand in the future. 
    If the brand you're looking for isn't listed, please feel free to submit using the link below!
</p>
<form method="post" action="/Request/Submit" style="background-color: #f9f9f9; padding: 20px; border-radius: 8px; max-width: 600px; margin: 0 auto;">
        <div></div>
            <button type="submit" class="btn btn-success">Submit a Request</button>
        </div>
    </form>

<h2>All Open Requests for Brands</h2>
<div name="disp_requests" class="table" >
        <table >
            <thead>
                <tr>
                    <th>
                        Brand
                    </th>
                    <th colspan="2" style="padding-right:10px; width: 25px;">
                        Date Submitted
                    </th>
                    <th style="text-align:center">
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model!= null){
                    @foreach (var item in Model){
                        <tr>
                            <td>@item.BrandRequest</td>
                            <td colspan="2" style="text-align:center;paddingt:5px 10px; width: 25px; font-weight: 700;">
                                @item.DateAdded
                                </td>
                            <td style="text-align:center;color:gray"><i>@item.Status</i></td>
                        </tr>
                    }
                }
                else{
                    <tr>
                        <td colspan="3"><i>Sorry, there are no brands listed. Please check back later.</i></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



