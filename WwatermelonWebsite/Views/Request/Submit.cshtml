@model WwatermelonWebsite.Models.RequestModel

@{
    ViewData["Title"] = "Request Info";
}
<h1>@ViewData["Title"]</h1>

<p style="font-size: 1.2em; color: #555;">
    At the moment, we are focused on beauty brands, but we hope to expand in the future. 
    If the brand you're looking for isn't listed, please feel free to submit a request below!
</p>

<form method="post" action="Submit" style="background-color: #f9f9f9; padding: 20px; border-radius: 8px; max-width: 600px; margin: 0 auto;">
    <table style="width: 100%; border-spacing: 10px;">
        <tr>
            <td style="font-weight: bold; padding-right: 10px;">Requestor email address</td>
            <td><input asp-for="EmailAddress" name="EmailAddress" id="EmailAddress" type="email" style="width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;" required ></td>
        </tr>
        <tr>
            <td style="font-weight: bold; padding-right: 10px;">Brand Request</td>
            <td><input asp-for="BrandRequest" name="BrandRequest" id="BrandRequest" type="text"  placeholder="Enter the brand name" style="width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;" required></td>
        </tr>
        
        <tr>
            <td style="font-weight: bold; padding-right: 10px;">Would you like to submit a correction?</td>
            <td><input asp-for="IsCorrection" type="checkbox" name="IsCorrection" id="IsCorrection"  style="margin-right: 10px;"> Yes, I would like to submit a correction</td>
        </tr>
        <tr id="correctionTextRow" style="display:none;">
            <td style="font-weight: bold; padding-right: 10px;">Correction Details</td>
            <td><textarea asp-for="CorrectionDetails" name="CorrectionDetails" id="CorrectionDetails"  placeholder="Enter correction details" style="width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;"></textarea></td>
        </tr>
    </table>

    <div style="margin-top: 20px;">
        <button type="submit" value="Submit" style="padding: 10px 20px; background-color: #5cb85c; color: white; border: none; border-radius: 4px; font-size: 16px;">Submit</button>
    </div>
</form>

<div class="container mt-5">
    <h3>Curious which brands have been requested?</h3>
    <form method="post" action="OpenRequests" style="background-color: #f9f9f9; padding: 20px; border-radius: 8px; max-width: 600px; margin: 0 auto;">
        <div style="margin-top: 20px;">
            <button type="submit" class="btn btn-success">See all requested brands</button>
        </div>
    </form>
    @{  
    if (@TempData["Msg"] != null)  
    {  
        <script>  
            alert('@TempData["msg"]')  
        </script>  
    }  
}   
</div>


<script>
    
    document.getElementById('chkCorrection').addEventListener('change', function() {
        var correctionTextRow = document.getElementById('correctionTextRow');
        if (this.checked) {
            correctionTextRow.style.display = 'table-row';
        } else {
            correctionTextRow.style.display = 'none';
        }
    });
</script>