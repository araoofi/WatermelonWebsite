@model List<WwatermelonWebsite.Models.BrandAction>

@{
    ViewData["Title"] = "Search Results";
}

<h2>Search Results</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Action</th>
                <th>Why</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Brand</td>
                    <td>@item.Action</td>
                    <td>@item.Why</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found.</p>
}

<div class="container mt-5">
    <h3>Search</h3>
    <form method="get" action="Index">
        <div class="form-group">
            <label for="searchInput">Search by Brand</label>
            <input type="text" id="searchInput" name="query" class="form-control" placeholder="Enter your search query" />
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

<div class="container mt-5">
    <h3>Don't see the brand you are looking for?</h3>
    <form method="post" action="/Request/Submit" style="background-color: #f9f9f9; padding: 20px; border-radius: 8px; max-width: 600px; margin: 0 auto;">
        <div style="margin-top: 20px;">
            <button type="submit" class="btn btn-success">Submit a Request</button>
        </div>
    </form>
</div>